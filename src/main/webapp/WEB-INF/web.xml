<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <display-name>ShopWebApp</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

   <filter>
       <filter-name>adminCabinetFilter</filter-name>
       <filter-class>ua.lviv.lgs.AdminFilter</filter-class>
   </filter>
  
  <servlet>
  	<display-name>RegistrationServlet</display-name>
  	<servlet-name>RegistrationServlet</servlet-name>
  	<servlet-class>ua.lviv.lgs.RegistrationServlet</servlet-class>

  </servlet>
  
  <servlet>
  	<display-name>LoginSevlet</display-name>
  	<servlet-name>LoginSevlet</servlet-name>
  	<servlet-class>ua.lviv.lgs.LoginSevlet</servlet-class>
  </servlet>
 
 
  <servlet-mapping>
  	<servlet-name>RegistrationServlet</servlet-name>
  	<url-pattern>/registration</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>LoginSevlet</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>

  <filter-mapping>
      <filter-name>adminCabinetFilter</filter-name>
      <url-pattern>/adminCabinet.jsp</url-pattern>
  </filter-mapping>
</web-app>